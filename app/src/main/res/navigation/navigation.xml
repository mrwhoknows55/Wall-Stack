<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/wallpaperListFragment">

    <fragment
        android:id="@+id/wallpaperListFragment"
        android:name="com.mrwhoknows.wallstack.ui.WallpaperListFragment"
        android:label="fragment_wallpaper_list"
        tools:layout="@layout/fragment_wallpaper_list" >
        <action
            android:id="@+id/action_wallpaperListFragment_to_favWallpaperListFragment"
            app:destination="@id/favWallpaperListFragment" />
        <action
            android:id="@+id/action_wallpaperListFragment_to_wallpaperCategoryListFragment"
            app:destination="@id/wallpaperCategoryListFragment" />
    </fragment>
    <fragment
        android:id="@+id/favWallpaperListFragment"
        android:name="com.mrwhoknows.wallstack.ui.FavWallpaperListFragment"
        android:label="fragment_fav_wallpaper_list"
        tools:layout="@layout/fragment_fav_wallpaper_list" />
    <fragment
        android:id="@+id/wallpaperCategoryListFragment"
        android:name="com.mrwhoknows.wallstack.ui.WallpaperCategoryListFragment"
        android:label="fragment_wallpaper_category_list"
        tools:layout="@layout/fragment_wallpaper_category_list" />
</navigation>